<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url"> jdbc:mysql://localhost:3306/jdbc</property>
		<property name="hibernate.connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">1</property>
		<property name="hibernate.dialect"> org.hibernate.dialect.MySQL5Dialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<mapping class="com.sreenu.dao.entities.channel" />
		<mapping class="com.sreenu.dao.entities.client" />
		<mapping class="com.sreenu.dao.entities.client_channel" />
		<mapping class="com.sreenu.dao.entities.CreditCardAccount" />
		<mapping class="com.sreenu.dao.entities.SavingAccount" />
		<mapping class="com.sreenu.dao.entities.LoanAccount" />
		<mapping class="com.sreenu.dao.entities.CustomerDetails" />
	</session-factory>
</hibernate-configuration>